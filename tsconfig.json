{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "DOM", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
  },
  "include": ["**/*.ts", "**/*.tsx", "styled-components.d.ts"],
  "exclude": ["node_modules"]
}
